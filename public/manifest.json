{
  "manifest_version": 2,
  "name": "spotlight",
  "description": "Spotlight search for chrome",
  "homepage_url": "https://github.com/duongvanha/spotlight",
  "version": "1.1.0",
  "icons": {
    "16": "icons/spotlight-logo16.png",
    "48": "icons/spotlight-logo48.png",
    "128": "icons/spotlight-logo128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "build/content_script.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "build/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "bookmarks",
    "tabs",
    "management",
    "storage",
    "cookies",
    "*://*.shopbase.net/",
    "*://*.shopbase.com/"
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+J",
        "mac": "Command+J",
        "chromeos": "Ctrl+M",
        "linux": "Ctrl+M"
      }
    }
  }
}
